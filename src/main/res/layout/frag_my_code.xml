<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QrCodeTab.QrCodeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/textViewCarPlateNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textViewEmail"
                android:layout_below="@+id/textViewEmail"
                android:text="234343434"
                android:textColor="#afafaf"
                android:layout_marginLeft="5dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_alignStart="@+id/textViewCarPlateNo"
                android:layout_below="@+id/textViewCarPlateNo"
                android:id="@+id/textViewCarModel"

                android:text="Toyoto Corolla"
                android:textColor="#aeaeae"
                android:textSize="15sp" />

            <TextView
                android:layout_marginTop="9dp"
                android:id="@+id/textViewEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_alignStart="@+id/imageViewProfilePhoto"
                android:layout_marginLeft="90dp"



                android:text="Email: msjahun@gmail.com"
                android:textColor="#000000"
                android:textSize="15sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewProfilePhoto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="26dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </RelativeLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/RelativeLayoutQrCode"
            android:layout_width="match_parent"
            android:layout_height="287dp">


            <ImageView
                android:id="@+id/imageView_qrCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="45dp"
                android:layout_height="45dp"

                android:layout_centerInParent="true"
                app:srcCompat="@mipmap/ic_launcher" />

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_SaveImage"
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_file_download_black_24dpp"
                android:text="SAVE TO GaLLERY"

                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/btn_GetQrCode"
                android:layout_marginTop="100dp"
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/colorPrimary"
                android:visibility="gone"
                android:text="Setup Qr code"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>

    </LinearLayout>





</LinearLayout>